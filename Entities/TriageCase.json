{
  "name": "TriageCase",
  "type": "object",
  "properties": {
    "patient_id": {
      "type": "string"
    },
    "patient_name": {
      "type": "string"
    },
    "symptoms": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "vitals": {
      "type": "object",
      "properties": {
        "temperature": {
          "type": "number"
        },
        "blood_pressure": {
          "type": "string"
        },
        "heart_rate": {
          "type": "number"
        },
        "respiratory_rate": {
          "type": "number"
        },
        "oxygen_saturation": {
          "type": "number"
        }
      }
    },
    "priority_score": {
      "type": "number",
      "description": "1-5 scale, 5 being most critical"
    },
    "severity_level": {
      "type": "string",
      "enum": [
        "critical",
        "high",
        "moderate",
        "low"
      ],
      "description": "Color-coded severity level"
    },
    "chief_complaint": {
      "type": "string"
    },
    "medical_history_notes": {
      "type": "string"
    },
    "assigned_to": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "waiting",
        "in_progress",
        "completed"
      ],
      "default": "waiting"
    },
    "queue_position": {
      "type": "number"
    }
  },
  "required": [
    "patient_name",
    "symptoms",
    "priority_score",
    "severity_level"
  ]
}
